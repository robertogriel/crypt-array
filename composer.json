{
  "name": "robertogriel/crypt-array",
  "version": "2.0.0",
  "description": "A simple PHP library to encrypt and decrypt strings or associative arrays using OpenSSL.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "robertogriel",
      "email": "roberto@griel.com.br"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-openssl": "*"
  },
  "autoload": {
    "psr-4": {
      "Crypto\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "pest"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require-dev": {
    "pestphp/pest": "^3.7.4"
  }
}
